{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["./src/**/*.js", "./tests/*.js"]
}
