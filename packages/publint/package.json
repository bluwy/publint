{
  "name": "publint",
  "version": "0.3.5",
  "description": "Lint packaging errors",
  "type": "module",
  "author": "Bjorn Lu",
  "license": "MIT",
  "bin": "./src/cli.js",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "browser": "./src/index-browser.js",
      "default": "./src/index-node.js"
    },
    "./utils": {
      "types": "./src/utils.d.ts",
      "browser": "./src/utils-browser.js",
      "default": "./src/utils-node.js"
    }
  },
  "scripts": {
    "cli": "node ./src/cli.js",
    "test": "vitest run",
    "test-dev": "vitest",
    "lint-publint": "node ./src/cli.js",
    "typecheck": "tsc"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "src"
  ],
  "funding": "https://bjornlu.com/sponsor",
  "homepage": "https://publint.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/publint/publint.git",
    "directory": "packages/publint"
  },
  "bugs": {
    "url": "https://github.com/publint/publint/issues"
  },
  "keywords": [
    "publish",
    "lint"
  ],
  "dependencies": {
    "@publint/pack": "workspace:^",
    "package-manager-detector": "^0.2.9",
    "picocolors": "^1.1.1",
    "sade": "^1.8.1"
  },
  "devDependencies": {
    "fs-fixture": "^2.7.0",
    "vitest": "^3.0.5"
  }
}